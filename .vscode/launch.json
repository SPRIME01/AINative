{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "ainative.app.infrastructure.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--reload"
      ],
      "jinja": true,
      "envFile": "${workspaceFolder}/backend/.env", // Optional: if you use a .env file
      "cwd": "${workspaceFolder}/backend/src", // Set CWD to src for relative paths in app
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend/src"
      }
    },
    {
      "name": "Pytest Current File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["${file}"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "envFile": "${workspaceFolder}/backend/.env",
      "cwd": "${workspaceFolder}/backend", // Run pytest from backend root
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend/src"
      }
    },
    {
      "name": "Pytest All",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["tests/"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "envFile": "${workspaceFolder}/backend/.env",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend/src"
      }
    }
  ]
}
